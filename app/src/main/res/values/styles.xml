<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/patrickhand_regular</item>
        <item name="checkboxStyle">@style/checkboxStyle</item>
        <item name="buttonStyle">@style/buttonStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/patrickhand_regular</item>
        <item name="checkboxStyle">@style/checkboxStyle</item>
        <item name="buttonStyle">@style/buttonStyle</item>
    </style>


    <style name="AppThemeDocument" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="checkboxStyle">@style/checkboxStyle</item>
        <item name="buttonStyle">@style/buttonStyle</item>
    </style>

    <style name="AppThemeReport" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
        <item name="android:fontFamily">@font/patrickhand_regular</item>
        <item name="checkboxStyle">@style/checkboxStyle</item>
        <item name="buttonStyle">@style/buttonStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="checkboxStyle" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox</item>
    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="textTitleReport" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="documentLogo" >
        <item name="android:padding">1dp</item>
    </style>

    <style name="documentPhoto" >
        <item name="android:scaleType">fitXY</item>
    </style>

</resources>
