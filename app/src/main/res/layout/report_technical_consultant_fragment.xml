<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/container_back"
        android:padding="8dp" >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textLayout_technicalConsultant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textTechnicalConsultant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_technicalConsultant" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textLayout_analysisDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textAnalysisDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:hint="@string/label_analysisDate" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textLayout_technicalConsultantContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textTechnicalConsultantContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="1234567890-() "
                android:inputType="number"
                android:hint="@string/label_technicalConsultantContact" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</ScrollView>



